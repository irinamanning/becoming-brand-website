<%= render :partial => 'nav' %>

<%= render :partial => 'menulist' %>

<!-- project list -->
<script>
  $(function() {
    $('.project-detail-row').hide();

    $('.project-more-info-link').click(function(e) {
      e.preventDefault();
      $(this).parents('.project-row').children('.project-detail-row').toggle('blind');
    });
  });
</script>
<% projects = [
    ["work/felix-gilman.png", "Felix Gilman, Author", "gilman"], 
    ["work/elite-gold.png", "Elite Gold", "elite"], 
    ["work/bfi.png", "BFI", ""], 
    ["work/swig.png", "Swig", ""], 
    ["work/bb.png", "BB", ""], 
    ["work/element.png", "Element", ""]
  ] %>
<div style="height:50px">&nbsp;</div>
<% projects.each do |project| %>
  <div class="project-row">
    <div class="row">
      <div class="col-xs-12">
        <div class="project-summary-row" style="background-image: url('/assets/<%= project[0] %>');">
          <div class="project-info-panel">
            <h1><%= project[1] %></h1>
            <p><a href="#" class="project-more-info-link">More Info</a></p>
          </div>
        </div>
        <%#= image_tag project[0], :class=>"img-responsive portfolio-img" %>
      </div>
    </div>
    <div class="row project-detail-row">
      <div class="col-xs-12">
        <%= render project[2] unless project[2].empty? %>
      </div>
    </div>
  </div>
<% end %>
<!-- end project list -->

<%= render :partial => 'footer' %>