<script>
  function toggleMenuPanel(visible) {
    // determine target position
    var targetPos = (visible == true ? "0px" : "-300px");

    // animate in the menu to target position
    $('#nav-menu').animate({ right: targetPos }, 250, 'swing', function() {
      $('#nav-menu-icon').toggle(!visible);
    });
  }
 
  $(function() {
  
    

    // close menu panel event
    $('#nav-menu-close').click(function(e) {
      toggleMenuPanel(false);
    });

    // open menu panel event
    $('#nav-menu-icon').click(function(e) {
      toggleMenuPanel(true);  
    });
  });
</script>

<%= image_tag "menu-icon-red.png", :id => "nav-menu-icon", :class => "big-padding-top" %>

<div id="nav-menu" style="right:-300px">  
  <%= image_tag "menu-close.png", :id => "nav-menu-close" %>
